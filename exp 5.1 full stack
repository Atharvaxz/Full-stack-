const express = require('express');
const mongoose = require('mongoose');
const bodyParser = require('body-parser');

// Initialize app
const app = express();
app.use(bodyParser.json());

// Connect to MongoDB
mongoose.connect('mongodb://127.0.0.1:27017/productDB', {
  useNewUrlParser: true,
  useUnifiedTopology: true
})
.then(() => console.log('âœ… Connected to MongoDB'))
.catch(err => console.log('âŒ MongoDB connection error:', err));

// Product Schema
const productSchema = new mongoose.Schema({
  name: String,
  price: Number,
  category: String
});

// Product Model
const Product = mongoose.model('Product', productSchema);

// âž• CREATE (Add new product)
app.post('/products', async (req, res) => {
  try {
    const product = new Product(req.body);
    await product.save();
    res.json({ message: 'âœ… Product added successfully', product });
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
});

// ðŸ“– READ (Get all products)
app.get('/products', async (req, res) => {
  try {
    const products = await Product.find();
    res.json(products);
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
});

// âœï¸ UPDATE (Update product by ID)
app.put('/products/:id', async (req, res) => {
  try {
    const product = await Product.findByIdAndUpdate(req.params.id, req.body, { new: true });
    if (!product) return res.status(404).json({ message: 'âŒ Product not found' });
    res.json({ message: 'âœ… Product updated successfully', product });
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
});

// ðŸ—‘ï¸ DELETE (Delete product by ID)
app.delete('/products/:id', async (req, res) => {
  try {
    const product = await Product.findByIdAndDelete(req.params.id);
    if (!product) return res.status(404).json({ message: 'âŒ Product not found' });
    res.json({ message: 'âœ… Product deleted successfully', product });
  } catch (err) {
    res.status(500).json({ error: err.message });
  }
});

// Start server
app.listen(3000, () => {
  console.log('ðŸš€ Server running on http://localhost:3000');
});

